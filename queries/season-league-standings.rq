# Use case: Season / League / What are the current standings?
# Use case: What is the team record broken down into home and away events?
# https://github.com/iptc/sport-model/wiki/Use-Cases

PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema/>
PREFIX sport: <http://www.iptc.org/ontologies/Sport/>
PREFIX schemaorg:  <https://schema.org/>
PREFIX spstat: <http://cv.iptc.org/newscodes/spstat/>
PREFIX spsocstat: <http://cv.iptc.org/newscodes/spsocstat/>
PREFIX spcompetitionscope: <http://cv.iptc.org/newscodes/spcompetitionscope/>

SELECT ?Team ?GP ?P ?W ?L ?D ?GF ?GA ?GD ?WHOME ?LHOME ?WAWAY
WHERE
{
	?season rdfs:type sport:Season .
	?season sport:performance ?teamperf . 
	?teamperf sport:performedBy ?team .
	?team schemaorg:name ?Team .
	?teamperf spstat:events-played ?GP .
	?teamperf spstat:standing-points ?P .
	?teamperf spstat:wins ?W .
	?teamperf spstat:losses ?L .
	?teamperf spstat:ties ?D .
	?teamperf spstat:points-scored-for ?GF .
	?teamperf spstat:points-scored-against ?GA .
	?teamperf spstat:points-difference ?GD .
	?teamperf sport:performanceSplit ?splithome .
	?splithome sport:performanceSplitType spcompetitionscope:events-home .
	?splithome spstat:wins ?WHOME .
	?splithome spstat:losses ?LHOME .
	# Does this need to repeat?
	?teamperf sport:performanceSplit ?splitaway .
	?splitaway sport:performanceSplitType spcompetitionscope:events-away .
	?splitaway spstat:wins ?WAWAY .
}

	ORDER BY DESC(?P) ?W
